        </tbody>
    </table>
    <br>
    <button id="applyStylesBtn">Apply Styles</button>

    <script>
        document.getElementById('applyStylesBtn').addEventListener('click', function() {
            // Get all table rows from tbody
            var rows = document.getElementById('employeeTable').getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            // Loop through rows
            for (var i = 0; i < rows.length; i++) {
                // Remove previous style first, for multiple clicks
                rows[i].classList.remove("alt");
                // Apply background color to alternate rows
                if (i % 2 === 1) { // Even index means 2nd, 4th, etc. (alternate)
                    rows[i].classList.add("alt");
                }
            }
        });
    </script>
</body>
